{
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "emitDeclarationOnly": true,
        "module": "ESNext",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES2016",
        "lib": [
            "dom",
            "ES2015",
            "ES2020.BigInt"
        ],
        "outDir": "dist",
    },
    "files": [
        "src/index.ts"
    ]
}